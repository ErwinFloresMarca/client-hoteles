{
  "compilerOptions": {
      "target": "esnext",
      "module": "esnext",
      "moduleResolution": "node",
      "strict": true,
      "jsx": "preserve",
      "sourceMap": true,
      "resolveJsonModule": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "lib": ["esnext", "dom","ES2015"],
      "emitDecoratorMetadata": true,
      "experimentalDecorators": true,
      "types": ["vite/client"],
      "baseUrl": "./",
      "paths": {
          "@/*": ["src/*"]
      }
  },
  "include": ["src/**/*.ts", "src/**/*.d.ts", "src/**/*.tsx", "src/**/*.vue", "src/settings.ts"]
}
